<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border">
        <!--android:orientation="vertical"
        android:padding="7dp">-->

        <ImageView
            android:id="@+id/imgview_doctor"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtview_doctorName"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:text="DR KALA A/P MUTHUKUMARU"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            app:layout_constraintStart_toEndOf="@+id/imgview_doctor"
            app:layout_constraintTop_toTopOf="parent"/>

        <!--<TextView
            android:id="@+id/txtview_doctorID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toEndOf="@+id/imgview_doctor"
            app:layout_constraintTop_toBottomOf="@+id/txtview_doctorName"/>-->

<!--        app:layout_constraintBottom_toBottomOf="parent"-->
        <TextView
            android:id="@+id/txtview_doctorSpeciality"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:text="Allied Health - Psychology"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imgview_doctor"
            app:layout_constraintTop_toBottomOf="@+id/txtview_doctorName"/>

<!--        app:layout_constraintBottom_toBottomOf="parent"-->
        <TextView
            android:id="@+id/txtview_educationBackground"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:text="BSc (Hons) Psychology (Lancs,UK)"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imgview_doctor"
            app:layout_constraintTop_toBottomOf="@+id/txtview_doctorSpeciality"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--    </android.support.v7.widget.CardView>-->

</RelativeLayout>